---
import { Image } from 'astro:assets'
import SocialIcons from './SocialIcons.astro'
import { coreSettings } from '@/settings'
import { heroBlurb } from '@/data'

const { name } = coreSettings
const { profilePicture, paragraphs } = heroBlurb
---
<div class="flex-col flex md:flex-row items-center gap-12">
  <div class='size-48 md:size-72'>
    <!-- Add your profile image -->
    <Image
      src={profilePicture}
      alt={name}
      class='w-full h-full mask mask-circle size-44'
      loading='eager'
    />
  </div>
  <div class='flex-1 text-center md:text-left'>
    <h1 class='text-4xl font-bold mb-4 mt-2'>
      Hello! I'm <span class='text-primary'>{name}</span>
    </h1>
    {paragraphs.map(text => (
      <p class='text-lg mb-6' set:html={text} />
    ))}
    <div class='flex items-center justify-center md:justify-normal md:ml-[-0.75em]'>
      <SocialIcons />
    </div>
  </div>
</div>